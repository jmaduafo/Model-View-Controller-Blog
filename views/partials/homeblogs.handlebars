{{#each blogs as |blog| }}
<div class="home-blog-card">
    <div class="top-section">
        <div class="blog-title">
            <h2>{{title}}</h2>
        </div>
        <div class="blog-user-created">
            <p>{{user.username}}</p>
            <p>5 days ago</p>
        </div>
    </div>
    <div class="middle-section">
        <div class="blog-body">
            <p>{{body}}</p>
        </div>
    </div>
    <div class="bottom-section">
        <div class="blog-comment-count">
            <p>0 comments</p>
        </div>
        <div class="blog-comment-icon">
            <i class='bx bxs-comment-detail bx-sm'></i>
        </div>
    </div>
    <div class="home-comments">
        {{#if loggedIn}}
            <div class="user-enter">
            <div class="user-profile">
                <p class="user-name">d</p>
            </div>
            <div class="user-comment">
                <form class="user-comment-form">
                    <input type="text" id="home-comment" placeholder="Add comment...">
                    <button>Comment</button>
                </form>
            </div>
        </div>
        <div class="other-comments">
            <div class="home-other-comment">
                <div class="other-name-time">
                    <p>3h ago</p>
                </div>
                <div class="other-body">
                    <p>{{comments.comment}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="home-comment-message message-button">
            <p>You must be logged in to comment</p>
            <a href="/login"><button>LOG IN</button></a>
        </div>
        {{/if}}
    </div>
</div>
{{/each}}

    